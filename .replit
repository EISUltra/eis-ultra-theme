modules = ["php-8.2"]

[env]
PHP_DISPLAY_ERRORS = "1"
PHP_ERROR_REPORTING = "E_ALL"

[workflows]
runButton = "Theme Server"

[[workflows.workflow]]
name = "Theme Server"
author = "EIS Ultra"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8000 -t ."
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 80

[agent]
expertMode = true
