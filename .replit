modules = ["php-8.2"]

[env]
PHP_DISPLAY_ERRORS = "1"
PHP_ERROR_REPORTING = "E_ALL"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
