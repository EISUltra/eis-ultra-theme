# ðŸ©º EIS Ultra Theme â€“ Replit Configuration
# ----------------------------------------
# Unified PHP 8.2 + Python 3.11 environment for local preview
# and workflow-based auto-launch

modules = ["php-8.2", "python-3.11"]

[env]
PHP_DISPLAY_ERRORS = "1"
PHP_ERROR_REPORTING = "E_ALL"
REPLIT_APP_PORT = "8000"

[nix]
packages = ["tree"]

# ðŸ§¹ Developer Alias â€“ quickly clean caches and logs
[aliases]
clean-project = "rm -rf __pycache__ .cache .local node_modules .replit_history *.log *.tmp"

# ----------------------------------------
# ðŸš€ Default Run Command (simple fallback)
# ----------------------------------------
run = "php -S 0.0.0.0:8000 -t ."

# ----------------------------------------
# ðŸ§© Replit Workflows (GUI Run Button)
# ----------------------------------------
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8000 -t ."
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 80

[agent]
expertMode = true
